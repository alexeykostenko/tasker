{% extends "layout.html.twig" %}

{% block content %}
<h2>Edit task</h2>

{% if message %}
<!--div class="alert alert-success fade in alert-dismissable" style="margin-top:18px;">
    <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
    <strong>Success!</strong> This alert box indicates a successful or positive action.
</div>

<div class="alert alert-danger fade in alert-dismissable">
    <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
    <strong>Danger!</strong> This alert box indicates a dangerous or potentially negative action.
</div-->
{% endif %}

  <form enctype="multipart/form-data" action="/update?id={{ task.id }}" method="post">
    <input name="_method" type="hidden" value="PUT">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" class="form-control" name="name" id="name" value="{{ task.name }}">
    </div>

    <div class="form-group">
      <label for="email">Email address:</label>
      <input type="email" class="form-control" name="email" id="email" value="{{ task.email }}">
    </div>

    <div class="form-group">
      <label for="image">Image:</label>
      <input type="file" class="form-control" name="image" id="image">
      {{ include('include/image-preview.html.twig') }}
    </div>

    <div class="form-group">
      <label for="text">Text:</label>
      <textarea name="text" id="text" class="form-control" rows="7">{{ task.text }}</textarea>
    </div>

    <div class="form-group">
      <label class="checkbox-inline">
        <input type="checkbox" value="1" name="done" {% if task.done == true %} checked="checked"{% endif %}>Done
      </label>
    </div>

    <button type="submit" class="btn btn-default">Сохранить</button>
    <a class="btn btn-warning preview-task" data-toggle="modal" data-target="#previewModal">Предварительный просмотр</a>
  </form>

  {{ include('include/popup-preview.html.twig') }}
{% endblock %}
